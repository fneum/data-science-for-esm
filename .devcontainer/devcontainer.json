{
  "image": "mcr.microsoft.com/devcontainers/python:3.13",
  "postCreateCommand": "pip install uv && uv sync --locked",
  "customizations": {
    "vscode": {
        "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "redhat.vscode-yaml",
        ],
      "settings": { "python.defaultInterpreterPath": ".venv/bin/python" }
    }
  }
}
